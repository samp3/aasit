<p id="notice"><%= notice %></p>

<h1>Listing Refs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Reftype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @refs.each do |ref| %>
      <tr>
        <td><%= ref.slug %></td>
        <td><%= ref.reftype.name %></td>
        <td><%= link_to 'Show', ref %></td>
        <td><%= link_to 'Edit', edit_ref_path(ref) %></td>
        <td><%= link_to 'Destroy', ref, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

